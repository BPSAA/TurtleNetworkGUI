<div class="smart-table__name smart-table__cell" data-column-id="name">
    <div class="cell">
        {{#if assetIconPath}}
            <div class="asset-logo margin-right-1 footnote-3"
                 style="width: 30px; height: 30px; background-image: url({{assetIconPath}});">
            </div>
        {{else}}
            <div class="asset-logo margin-right-1 footnote-3"
                 style="width: 30px; height: 30px; background-color: {{charColor}}; font-size: 13px;">{{firstAssetChar}}</div>
        {{/if}}
        <span>{{assetName}}</span></div>
</div>
<div class="smart-table__available smart-table__cell" data-column-id="balance">
    <div class="cell">
        <span class="{{SELECTORS.AVAILABLE}}"></span>
    </div>
</div>
<div class="smart-table__in-orders smart-table__cell" data-column-id="inOrders">
    <div class="cell">
        <span class="{{SELECTORS.IN_ORDERS}}"></span>
    </div>
</div>
<div class="smart-table__available-value smart-table__cell" data-column-id="mirror">
    <div class="cell">
        <span class="{{SELECTORS.BASE_ASSET_BALANCE}}"></span>
    </div>
</div>
<div class="smart-table__chart-wrap smart-table__cell" data-column-id="rate">
    <div class="cell">
        <span class="{{SELECTORS.EXCHANGE_RATE}}"></span>
        <div class="{{SELECTORS.CHART_CONTAINER}} chart-asset-rate"></div>
    </div>
</div>
<div class="smart-table__change smart-table__cell" data-column-id="change24">
    <div class="cell">
        <span class="{{SELECTORS.CHANGE_24}}"></span>
    </div>
</div>
<div class="smart-table__control-cell smart-table__cell" data-column-id="controls">
    <div class="cell">
        <span class="icon icon-send {{SELECTORS.BUTTONS.SEND}}" role="button" tabindex="0">
            <span w-i18n-literal="send"></span>
        </span>
        <span class="icon icon-receive {{SELECTORS.BUTTONS.RECEIVE}}" role="button" tabindex="0">
            <span w-i18n-literal="receive"></span>
        </span>
        {{#if canShowDex}}
            <span class="icon icon-dex {{SELECTORS.BUTTONS.DEX}}" role="button" tabindex="0">
                <span w-i18n-literal="dex"></span>
            </span>
        {{/if}}
        {{#if canShowToggleSpam}}
            <span class="icon {{SELECTORS.BUTTONS.TOGGLE_SPAM}}">
                <span w-i18n-literal="tospam" class="tospam"></span>
                <span w-i18n-literal="unspam" class="unspam"></span>
            </span>
        {{/if}}

        <div class="actions-wrapper">
            <div class="click-area" role="button" tabindex="0">
                <div class="dots">
                    <div class="dot"></div>
                    <div class="dot"></div>
                    <div class="dot"></div>
                </div>
                <div class="actions-container">

                    <div class="action disabled-900 body-2 {{SELECTORS.ACTION_BUTTONS.ASSET_INFO}}"
                         role="button" tabindex="0">
                        <span w-i18n-literal="info"></span>
                    </div>

                    <div class="action disabled-900 body-2 {{SELECTORS.ACTION_BUTTONS.SEND}}"
                         role="button" tabindex="0">
                        <span w-i18n-literal="send"></span>
                    </div>


                    <div class="action disabled-900 body-2 {{SELECTORS.ACTION_BUTTONS.RECEIVE}}"
                         role="button" tabindex="0">
                        <span w-i18n-literal="receive"></span>
                    </div>

                    {{#if canBurn}}
                        <div class="action disabled-900 body-2 {{SELECTORS.ACTION_BUTTONS.BURN}}"
                             role="button" tabindex="0">
                            <span w-i18n-literal="burn"></span>
                        </div>
                    {{/if}}

                    {{#if canReiisue}}
                        <div class="action disabled-900 body-2 {{SELECTORS.ACTION_BUTTONS.REISSUE}}"
                             role="button" tabindex="0">
                            <span w-i18n-literal="reissue"></span>
                        </div>
                    {{/if}}

                    {{#if canShowDex}}
                        <div class="action disabled-900 body-2 {{SELECTORS.ACTION_BUTTONS.DEX}}"
                             role="button" tabindex="0">
                            <span w-i18n-literal=""></span>
                        </div>
                    {{/if}}

                    {{#if canShowToggleSpam}}
                        <div class="action disabled-900 body-2 {{SELECTORS.ACTION_BUTTONS.TOGGLE_SPAM}}"
                             role="button" tabindex="0">
                            <span w-i18n-literal="tospam" class="tospam"></span>
                            <span w-i18n-literal="unspam" class="unspam"></span>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>